<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_num_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1号玩家(XXX)"
        android:textColor="#000"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_grade_cut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_rectangle_common"
            android:gravity="center"
            android:scaleType="center"
            android:src="@mipmap/num_cut" />

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="0"
            android:textColor="#FF000000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iv_grade_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_rectangle_common"
            android:gravity="center"
            android:scaleType="center"
            android:src="@mipmap/num_add" />

    </LinearLayout>

</LinearLayout>